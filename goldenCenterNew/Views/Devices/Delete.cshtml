@model CT_Devices
@{
    ViewData["Title"] = "Eliminar Dispositivo";
}

<h2>Eliminar Dispositivo</h2>
<p>¿Estás seguro que deseas eliminar el dispositivo con Serial Number: <strong>@Model.SerialNumber</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PKDeviceID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Devices")" class="btn btn-secondary">Cancelar</a>
</form>