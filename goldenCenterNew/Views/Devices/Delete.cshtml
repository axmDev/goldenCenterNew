@model goldenCenterNew.Models.CT_Devices<h2>Eliminar Dispositivo</h2>@if (ViewBag.Message != null){    <div class="alert alert-success" role="alert">        @ViewBag.Message    </div>    <script>        setTimeout(function () {            window.location.href = '@Url.Action("Index", "Devices")';        }, 2500);    </script>}else{    <p>¿Estás seguro de que deseas eliminar este dispositivo?</p>    <div>        <h4>Dispositivo</h4>        <hr />        <dl class="dl-horizontal">            <dt>ID</dt>            <dd>@Model.PKDeviceID</dd>            <dt>Serial Number</dt>            <dd>@Model.SerialNumber</dd>        </dl>    </div>    <form asp-action="Delete" method="post">        <input type="hidden" asp-for="PKDeviceID" />        <button type="submit" class="btn btn-danger">Eliminar</button>        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>    </form>}