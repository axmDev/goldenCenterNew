@model IEnumerable<dynamic>

@{
    ViewBag.Title = "Disabled Devices";
}

<h2>Disabled Devices</h2>
<table class="table">
    <thead>
        <tr>
            <th>Serial Number</th>
            <th>Device Type</th>
            <th>Cycles</th>
            <th>Weekly Cycles</th>
            <th>Status</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.SerialNumber</td>
                <td>@device.DeviceType</td>
                <td>@device.Cycles</td>
                <td>@device.WeeklyCycles</td>
                <td>@(device.Available ? "Enabled" : "Disabled")</td>
                <td>@device.Message</td>
            </tr>
        }
    </tbody>
</table>